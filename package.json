{
  "name": "chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run build:obfuscate",
    "start": "next start",
    "prepare": "husky",
    "postbuild": "next-sitemap",
    "build:stats": "ANALYZE=true npm run build",
    "build:obfuscate": "next-css-obfuscator",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build app-dev",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down --remove-orphans",
    "prisma:migrate:dev:env": "dotenv -e .env.development.local -- npx prisma migrate dev --name",
    "docker:stage:build": "npm run docker:stage:up db-stage && dotenv -e .env.staging.local -- docker compose -f docker-compose.stage.yml build app-stage",
    "docker:stage:up": "docker compose -f docker-compose.stage.yml up -d",
    "docker:stage:down": "docker compose -f docker-compose.stage.yml down --remove-orphans",
    "docker:prod:build": "dotenv -e envs/production/.env.production.docker.local -- npm run docker:prod:up db-prod && dotenv -e .env.staging.local -- docker compose -f docker-compose.prod.yml build app-prod",
    "prisma:migrate:prod": "npx prisma migrate deploy",
    "cmd:start:prod": "npm run prisma:migrate:prod && node server.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.11.0",
    "@react-email/components": "^0.0.15",
    "@react-email/tailwind": "^0.0.14",
    "clsx": "^2.1.0",
    "dotenv-cli": "^7.4.1",
    "next": "14.1.3",
    "next-auth": "^5.0.0-beta.4",
    "prisma": "^5.11.0",
    "react": "^18",
    "react-dom": "^18",
    "react-email": "^2.1.0",
    "react-hook-form": "^7.51.0",
    "resend": "^3.2.0",
    "sharp": "^0.33.2",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@hookform/devtools": "^4.3.1",
    "@next/bundle-analyzer": "^14.1.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "next-css-obfuscator": "^2.2.13",
    "next-sitemap": "^4.2.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.3.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5"
  }
}
